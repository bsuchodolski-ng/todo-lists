<div class="row">
  <div class=col-sm-6>
    <%= form_for @to_do_list, url: to_do_lists_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <%= f.submit I18n.t('to_do_list.create'), class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
